<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Ws2812RealtimeDesktopClient.ViewModels"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Padding="0, 10"
             x:DataType="viewModels:EditPresetDialogViewModel"
             x:Class="Ws2812RealtimeDesktopClient.Dialogs.EditPresetContentDialog">
    <StackPanel Spacing="8" MinWidth="400">
        <TextBox Watermark="Name"
                 Text="{CompiledBinding Name}"
                 AttachedToVisualTree="InputField_OnAttachedToVisualTree" />
    </StackPanel>
</UserControl>